{
  "name": "clean-shop",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "start": "EXPO_PUBLIC_STAGE=DEV expo start -g",
    "android": "EXPO_PUBLIC_STAGE=DEV expo run:android",
    "ios": "EXPO_PUBLIC_STAGE=DEV expo run:ios",
    "web": "EXPO_PUBLIC_STAGE=DEV expo start --web",
    "lint": "eslint .",
    "format": "prettier . --write",
    "prettier:check": "prettier . --check",
    "pre-commit": "pre-commit",
    "test": "jest src",
    "test:e2e": "detox test --configuration ios.sim.debug --reuse",
    "build:dev-client": "EXPO_PUBLIC_STAGE=DEV eas build --profile development-simulator --platform ios --local",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@shopify/flash-list": "1.6.4",
    "axios": "^1.6.8",
    "expo": "~51.0.6",
    "expo-constants": "~16.0.1",
    "expo-dev-client": "~4.0.14",
    "expo-image": "~1.12.9",
    "expo-linking": "~6.3.1",
    "expo-router": "~3.5.14",
    "expo-status-bar": "~1.12.1",
    "expo-updates": "~0.25.14",
    "inversify": "^6.0.2",
    "mobx": "^6.12.3",
    "mobx-react-lite": "^4.0.7",
    "react": "18.2.0",
    "react-native": "0.74.1",
    "react-native-paper": "^5.12.3",
    "react-native-safe-area-context": "^4.10.1",
    "react-native-screens": "3.31.1",
    "reflect-metadata": "^0.2.2",
    "styled-components": "^6.1.11"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/plugin-proposal-decorators": "^7.24.1",
    "@config-plugins/detox": "^8.0.0",
    "@testing-library/react-native": "^12.5.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@types/react": "~18.2.45",
    "add": "^2.0.6",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "detox": "^20.21.0",
    "eslint": "^8.57.0",
    "eslint-config-expo": "^7.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-testing-library": "^6.2.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-expo": "^51.0.1",
    "lint-staged": ">=10",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "react-dom": "^18.3.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.3",
    "yarn": "^1.22.22"
  },
  "private": true,
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*": "prettier --write"
  }
}
